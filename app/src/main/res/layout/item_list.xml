<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/memo_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_marginTop="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/continent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone">
        <TextView
            android:id="@+id/continent_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="continent"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#6470f5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">


        <ImageView
            android:id="@+id/flag_image"
            android:layout_width="90dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/btn_star"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/country_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="#464646"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/capital_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capital"
                android:textSize="18dp"
                android:textColor="#583c36"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#c37c7b7b">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c3c6c2c2">

    </LinearLayout>
</LinearLayout>